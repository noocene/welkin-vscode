{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "welkin",
    "patterns": [{
            "include": "#duplications"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#declarations"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#data"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#lambdas"
        },
        {
            "include": "#calls"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "name": "comment.line",
                "match": "\\/\\/.*$"
            }]
        },
        "declarations": {
            "patterns": [{
                    "match": "^([A-Za-z_]+)\\s*(:)[^:]",
                    "captures": {
                        "1": {
                            "name": "variable.parameter"
                        }
                    }
                },
                {
                    "match": "([A-Za-z_]+)\\s*(:)[^:]",
                    "captures": {
                        "1": {
                            "name": "entity.name"
                        }
                    }
                }
            ]
        },
        "keywords": {
            "patterns": [{
                "match": "((~([A-Za-z]+))|\\*|=|::|:|'|(\\|?-)?>)",
                "captures": {
                    "1": {
                        "name": "keyword.other"
                    }
                }
            }]
        },
        "functions": {
            "match": "(~as)\\s*([A-Za-z_]+)",
            "captures": {
                "1": {
                    "name": "keyword.other"
                },
                "2": {
                    "name": "entity.name"
                }
            }
        },
        "lambdas": {
            "match": "([A-Za-z_]+)\\s*(\\|\\|?>)",
            "captures": {
                "1": {
                    "name": "entity.name"
                },
                "2": {
                    "name": "keyword.other"
                }
            }
        },
        "duplications": {
            "match": "([A-Za-z_]+)\\s*(<)",
            "captures": {
                "1": {
                    "name": "entity.name"
                },
                "2": {
                    "name": "keyword.other"
                }
            }
        },
        "calls": {
            "match": "([A-Za-z_]+)[\\[(]",
            "captures": {
                "1": {
                    "name": "entity.name.function"
                }
            }
        },
        "data": {
            "begin": "(~data)\\s*([A-Za-z_]+)",
            "end": "{",
            "captures": {
                "1": {
                    "name": "keyword.other"
                },
                "2": {
                    "name": "variable.parameter"
                }
            },
            "patterns": [{
                    "include": "#data_arg"
                },
                {
                    "include": "#data_arg_erased"
                },
                {
                    "include": "#data_with"
                },
                {
                    "match": "([A-Za-z_]+)",
                    "captures": {
                        "1": {
                            "name": "entity.name"
                        }
                    }
                },
                {
                    "match": "\\(\\s+([A-Za-z_]+)\\s+\\)",
                    "captures": {
                        "1": {
                            "name": "entity.name"
                        }
                    }
                }
            ]
        },
        "data_arg": {
            "begin": "\\(\\s*([A-Za-z_]+):",
            "end": "\\)",
            "captures": {
                "1": {
                    "name": "entity.name"
                }
            },
            "patterns": [{
                "include": "source.welkin"
            }]
        },
        "data_arg_erased": {
            "begin": "\\[\\s*([A-Za-z_]+):",
            "end": "\\]",
            "captures": {
                "1": {
                    "name": "entity.name"
                }
            },
            "patterns": [{
                "include": "source.welkin"
            }]
        },
        "data_with": {
            "begin": "(~with)\\s*{",
            "end": "}",
            "captures": {
                "1": {
                    "name": "keyword.other"
                }
            },
            "patterns": [{
                "include": "#with_binding"
            }, {
                "include": "source.welkin"
            }]
        },
        "with_binding": {
            "match": "([A-Za-z_]+)\\s*:[^:]",
            "captures": {
                "1": {
                    "name": "entity.name"
                }
            }
        }
    },
    "scopeName": "source.welkin"
}